@model CartDto
@{
    ViewData["Title"] = "Checkout";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.Error
    </div>
}

@if (Model != null && Model.CartDetails.Count() > 0)
{
    <form method="post">
        <input type="hidden" asp-for="CartHeader.UserId" />
        <input type="hidden" asp-for="CartHeader.Id" />
        <input type="hidden" asp-for="CartHeader.CouponCode" />
        <input type="hidden" asp-for="CartHeader.DiscountTotal" />
        <input type="hidden" asp-for="CartHeader.OrderTotal" />

        <div>
            <span style="font-size:25px;" class="text-warning">Enter details and place order :</span>
            <br />
        </div>
        <div class="border mt-2">
            <div class="container row">
                <div class="col-7">
                    <div class="row">
                        <div class="col-12">
                            <label class="col-form-label">First Name :</label>
                            <input class="form-control" asp-for="CartHeader.FirstName" />
                        </div>

                        <div class="col-12">
                            <label class="col-form-label">Last Name :</label>
                            <input class="form-control" asp-for="CartHeader.LastName" />
                        </div>

                        <div class="col-12">
                            <label class="col-form-label">Email :</label>
                            <input class="form-control" asp-for="CartHeader.Email" />
                        </div>

                        <div class="col-12">
                            <label class="col-form-label">Phone :</label>
                            <input class="form-control" asp-for="CartHeader.Phone" />
                        </div>

                        <div class="col-12">
                            <label class="col-form-label">PickUp Time</label>
                            <input class="form-control form_datetime" type="text" asp-for="CartHeader.PickupDateTime">
                        </div>

                        <div class="col-12">
                            <label class="col-form-label">Card Number :</label>
                            <input class="form-control" asp-for="CartHeader.CardNumber" />
                        </div>

                        <div class="col-12">
                            <label class="col-form-label">CVV :</label>
                            <input class="form-control" asp-for="CartHeader.CVV" />
                        </div>

                        <div class="col-12 pb-4">
                            <label class="col-form-label">Expiry :</label>
                            <input placeholder="MMYY" class="form-control" asp-for="CartHeader.ExpiryMonthYear" />
                        </div>
                    </div>
                </div>
                <div class="col-5">
                    <div class="card mt-4">
                        <div class="card-body">
                            <div class=" d-none d-lg-block">
                                <div class="row text-danger">
                                    <div class="col-6">
                                        Product Details
                                    </div>

                                    <div class="col-3">
                                        Price
                                    </div>

                                    <div class="col-3">
                                        Count
                                    </div>
                                </div>
                            </div>

                            <hr />

                            @foreach (var item in Model.CartDetails)
                            {
                            <div class="row h-100">
                                <div class="col-6">
                                    <span style="font-size:20px">@item.Product.Name</span>
                                </div>

                                <div class="col-3" style="font-size:11px;">
                                    <span style="font-size:17px;"> @item.Product.Price.ToString("C")</span>

                                </div>
                                <div class="col-3" style="font-size:11px;">
                                    <span style="font-size:17px;"> @item.Count</span>
                                </div>
                            </div>
                            <hr />
                            }

                            <div class="row">
                                <div class="col-12 text-right pr-4 text-danger">
                                    Order Total : @Model.CartHeader.OrderTotal.ToString("C") <br />
                                    
                                    @if (Model.CartHeader.DiscountTotal > 0)
                                    {
                                        <span class="text-success">Order Discount : @Model.CartHeader.DiscountTotal.ToString("C")</span> <br />
                                    }
                                </div>
                            </div>

                        </div>
                        <div class="card-footer">
                            <div class="row">

                                <div class="col-12 ">
                                    <button type="submit" class="btn btn-success form-control ">
                                        <span>Place Order</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}

@section Scripts {
    <script>
        $(function() {
            $('.form_datetime').val('');
            $('.form_datetime').datetimepicker({format: 'YYYY-MM-DD HH:mm'});
            //$('.form_datetime').datetimepicker('setStartDate', new Date());
        });
    </script>
}