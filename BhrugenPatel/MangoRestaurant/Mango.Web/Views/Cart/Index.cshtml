@model CartDto

@{
    ViewData["Title"] = "Shopping Cart";
}

@if (Model.CartHeader != null && Model.CartDetails != null)
{
<form method="post">
    <br />

    <input type="hidden" asp-for="CartHeader.UserId" />
    <input type="hidden" asp-for="CartHeader.Id" />

    <div class="">
        <div class="card border mt-4 container">
            <div class="card-header bg-dark text-light ml-0 row ">
                <div class="col-6">
                    <i class="fa fa-shopping-cart"></i> &nbsp;
                    Shopping Cart
                </div>
                <div class="col-6 text-end">
                    <a class="btn btn-outline-warning btn-sm" asp-controller="Home" asp-action="Index">Continue Shopping</a>
                </div>
            </div>
            <div class="card-body">
                <div class=" d-none d-lg-block">
                    <div class="row text-info">
                        <div class="col-lg-2">
                        </div>
                        <div class="col-lg-5">
                            Product Details
                        </div>
                        <div class="col-lg-2">
                            Price
                        </div>
                        <div class="col-lg-2">
                            Count
                        </div>
                        <div class="col-lg-1">
                        </div>
                    </div>
                </div>

                <hr />

                @foreach (var item in Model.CartDetails)
                {
                <div class="row h-100">
                    <div class="col-4 col-md-2 text-center py-2">
                        <img src="@item.Product.ImageUrl" class="rounded" width="100%" />
                    </div>
                    <div class="col-8 col-md-5">
                        <h5>@item.Product.Name</h5>
                        <div style="font-size:11px;">@Html.Raw(item.Product.Description)</div>
                    </div>
                    <div class="col-3 col-md-2 pt-md-4" style="font-size:11px;">
                        <span style="font-size:17px;">@item.Product.Price.ToString("C")</span>
                    </div>
                    <div class="col-3 col-md-2 pt-md-4" style="font-size:11px;">
                        <span style="font-size:17px;">@item.Count</span>
                    </div>
                    <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                        <a class="btn btn-outline-danger" asp-action="Remove" asp-route-itemid="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </div>
                }

                <hr />
                <div class="row">
                    <div class="col-6">
                        <span>Coupon:</span>
                        <input />
                        <button type="submit" class="btn-success"> Apply </button>
                    </div>
                    <div class="col-6 text-end">
                        <span class="text-danger" style="font-size:21px;">
                            Order Total : @Model.CartHeader.OrderTotal.ToString("C") <br />
                        </span>
                    </div>
                </div>
            </div>
            <div class="card-footer row">
                <div class="col-6 col-md-3 offset-md-6">
                </div>
                <div class="col-6 col-md-3">
                    <a class="btn btn-success form-control" asp-controller="Cart" asp-action="Checkout">
                        <span>Checkout</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>
}